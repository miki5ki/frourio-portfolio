datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id    Int     @id @default(autoincrement())
  label String
  done  Boolean @default(false)
}

model Topic {
  id Int @id @default(autoincrement())
  title String
  message String
  tag String
  like Int
  userName String
  userId Int
  createdAt String
}